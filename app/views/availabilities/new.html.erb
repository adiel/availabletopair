<h1>New availability</h1>

<% form_for(@availability) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :project, 'Project (optional)' %><br />
    <%= f.text_field :project %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </p>
  <p>
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time %>
  </p>
  <p class="submit">
    <%= f.submit 'Publish availability' %>
  </p>
<% end %>

<div class="nav">
  <%= link_to 'Home', availabilities_path %>
</div>