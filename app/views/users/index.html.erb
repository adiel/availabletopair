<% content_for :head_links do %>
    <link href="<%=http_root%>/<%=h @user.username%>.atom" title="Available to Pair - Atom" type="application/atom+xml" rel="alternate"/>
<% end %>

<h1>All <%=h @user.username %>'s availability</h1>

<table class="availabilities">
  <tr>
    <th>Who</th>
    <th>What</th>
    <th>Tags</th>
    <th>When</th>
    <th>How long</th>
    <th>Pairs available</th>
    <th>Updated</th>
    <th colspan="2">&nbsp;</th>
  </tr>
<%= render :partial => '/availabilities/list' %>
</table>

<%= render :partial => "/availabilities/calendar" %>
<div class="nav">
    Subscribe to updates of <%=@user.username %>'s available pairs (<a href="/<%=@user.username%>.atom">atom</a>) | <%= link_to 'Make yourself available', new_availability_path %>
</div>
